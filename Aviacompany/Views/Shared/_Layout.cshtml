<!DOCTYPE html>
<html>
<head>
    
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/images/black-plane.png" rel="shortcut icon"  type="image/png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="~/Scripts/jquery-3.2.1.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link href="~/Content/Site.css" rel="stylesheet"/>

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <title>@ViewBag.Title</title>

</head>
<body style="background: #d14f5a">
    <nav>
        <div class="nav-wrapper">
            <div class="container">
                <a href="@Url.Action("Index", "Home")" class="brand-logo"><i class="fa fa-plane fa-2x"></i></a>
                <a href="#" class="button-collapse" data-activates="mobile"> <i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down text-up">
                    @if (Request.IsAuthenticated && User.IsInRole("Administrators"))
                    {
                        <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Администратор<i class="material-icons right">arrow_drop_down</i></a></li>
                        <!-- Dropdown Structure -->
                        <ul id="dropdown1" class="dropdown-content">
                            <li><a href="@Url.Action("Index", "RoleAdmin")">Управление ролями</a></li>
                            <li><a href="@Url.Action("Index", "City")">Города</a></li>
                            <li class="divider"></li>
                            <li><a href="#!">three</a></li>
                        </ul>
                        
                    }
                    <li><a href="#">Информация</a></li>
                    <li><a href="@Url.Action("Contacts", "Home")">Контакты</a></li>
                    <li><a href="@Url.Action("About", "Home")">О нас</a></li>
                    @if (!Request.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("Register", "Register")">Регистрация</a></li>
                        <li><a href="@Url.Action("Login", "Login")">Вход</a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("EditUser", "UserSettings")">Мой аккаунт</a></li>
                        <li><a href="@Url.Action("Logout", "Login")">Выход</a></li>
                    }
                </ul>
                <ul class="side-nav" id="mobile">
                    <li><a href="#">Информация</a></li>
                    <li><a href="@Url.Action("Contacts", "Home")">Контакты</a></li>
                    <li><a href="@Url.Action("About", "Home")">О нас</a></li>
                    <li><a href="@Url.Action("Register", "Home")">Регистрация</a></li>
                    <li><a href="@Url.Action("Login", "Login")">Вход</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row">
        <div class="container" style="min-height: 450px">
            <h3 class="h3 grey-text text-lighten-4 center-align">@ViewBag.Title</h3>
            <div class="progress">
                <div class="determinate" style="width: 100%; background: #f7afb5"></div>
            </div>
            @RenderBody()
        </div>
    </div>
    <footer class="page-footer footer-back">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Авиакомпания</h5>
                    <p class="grey-text text-lighten-4">Вы находитесь на сайте авиакомпании <a href="https://www.facebook.com/denis.bezuglyi" target="_blank" class="grey-text text-lighten-4">Безуглого Дениса</a></p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Ссылки</h5>
                    <ul class="social">
                        <li> <a href="https://facebook.com" target="_blank"><i class=" fa fa-facebook"></i></a></li>
                        <li> <a href="https://twitter.com" target="_blank"><i class="fa fa-twitter"></i></a></li>
                        <li> <a href="https://plus.google.com" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                        <li> <a href="https://www.youtube.com/" target="_blank"><i class="fa fa-youtube"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2017 Copyright Денис. All right reserved.
            </div>
        </div>
    </footer>
    <script>
        $(document).ready(function () {
            $(".button-collapse").sideNav();
        })
    </script>
</body>

</html>